{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (xUnit)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/path/to/your/test/project.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "runtimeExecutable": "dotnet",
            "runtimeArgs": ["test", "--no-build", "--no-restore"],
            "env": {
                "DOTNET_ENVIRONMENT": "development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
